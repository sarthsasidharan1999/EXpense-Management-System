<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] -EMS - Smart Expense & Income Tracker</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <div class="layout-wrapper d-flex">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar d-flex flex-column">
            <div class="sidebar-brand d-flex align-items-center px-3 py-3 border-bottom border-secondary">
                <i class="fas fa-wallet me-2"></i>
                <span>EMS</span>
            </div>
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link">
                        <i class="fas fa-chart-pie"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                
                <!-- Expense Dropdown -->
                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#expenseCollapse" role="button" aria-expanded="false" aria-controls="expenseCollapse">
                        <div>
                            <i class="fas fa-money-bill-wave"></i>
                            <span>Expenses</span>
                        </div>
                        <i class="fas fa-caret-down"></i>
                    </a>
                    <div class="collapse ps-4" id="expenseCollapse">
                        <a class="nav-link" asp-controller="Expense" asp-action="Create">Add Expense</a>
                        <a class="nav-link" asp-controller="Expense" asp-action="Index">Expense List</a>
                    </div>
                </li>

                <!-- Income Dropdown -->
                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#incomeCollapse" role="button" aria-expanded="false" aria-controls="incomeCollapse">
                        <div>
                            <i class="fas fa-coins"></i>
                            <span>Income</span>
                        </div>
                        <i class="fas fa-caret-down"></i>
                    </a>
                    <div class="collapse ps-4" id="incomeCollapse">
                        <a class="nav-link" asp-controller="Income" asp-action="Create">Add Income</a>
                        <a class="nav-link" asp-controller="Income" asp-action="Index">Income List</a>
                    </div>
                </li>


                <!-- Auth Links -->
                <li class="nav-item">
                    <a class="nav-link" href="/User/Login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Login</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/User/Register">
                        <i class="fas fa-user-plus"></i>
                        <span>Register</span>
                    </a>
                </li>
            </ul>

            <!-- Toggle Button -->
            <div class="mt-auto toggle-btn text-end px-3 py-2">
                <i id="sidebarToggle" class="fas fa-angle-double-left"></i>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content flex-grow-1 overflow-auto">
            <div class="content-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Custom Script for Sidebar/Dropdown -->
    <script>
        // Sidebar Toggle
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            const sidebar = document.getElementById("sidebar");
            const mainContent = document.querySelector(".main-content");
            sidebar.classList.toggle("collapsed");
            mainContent.classList.toggle("collapsed");
            this.classList.toggle("fa-angle-double-left");
            this.classList.toggle("fa-angle-double-right");
        });

        // Dropdown Toggle
        document.getElementById("expenseToggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("expenseDropdown").classList.toggle("show");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
